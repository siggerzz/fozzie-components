{
  "version": "independent",
  "npmClient": "yarn",
  "packages": [
    "packages/*",
    "packages/components/atoms/*",
    "packages/components/molecules/*",
    "packages/components/organisms/*",
    "packages/services/*",
    "packages/tools/*"
  ],
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "release: automated version bump via lerna"
    }
  },
  "changelogPreset": "angular",
  "ignoreChanges": ["**/*.md", "**/*.spec.js"],
  "useWorkspaces": true
}
